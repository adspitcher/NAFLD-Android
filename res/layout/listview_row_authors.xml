<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/items_vertical_padding"
    android:paddingLeft="@dimen/items_horizontal_padding"
    android:paddingRight="@dimen/items_horizontal_padding"
    android:paddingTop="@dimen/items_vertical_padding" >

    <TextView
        android:id="@+id/textview_drname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_dummy"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textview_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_institute"
        android:gravity="center_vertical"
        android:text="@string/text_dummy"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textview_qualification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_degree"
        android:gravity="center_vertical"
        android:text="@string/text_dummy"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textview_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_location_place"
        android:gravity="center_vertical"
        android:text="@string/text_dummy"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="serif" />

</LinearLayout>
